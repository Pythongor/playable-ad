{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,           /* Allows .js files to be imported/compiled */
    "checkJs": false,          /* Keep false for now so JS files don't throw errors */
    "strict": true,
    "noEmit": true,            /* Vite handles the emit/build, not tsc */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}